<Window x:Class="Button.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Button"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Name="MyButton" 
                Background="Brown"
                Foreground="Gold"
                MouseEnter="MyButton_MouseEnter"
                MouseLeave="MyButton_MouseLeave"
                Width="100"  MouseDoubleClick="MyButton_MouseDoubleClick"   Height="30" Click="Button_Click">Click me</Button>
        <Label Name="myLabel"  FontSize="16"   >Hello world</Label>

    </StackPanel>
</Window>
